import email.charset
user_name = input("please enter your name:")
comment = input("enter your comment")
def check_unsafe_word(commen,user_name):
    if "fool" in comment or "shit" in comment or "ctrl" in comment or "幽默" in comment:
        return True
    else:
        return False
check_result = check_unsafe_word(comment,user_name)
bool(check_result)
