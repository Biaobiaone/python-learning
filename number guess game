import  random
right_number = random.randint(1,1000)
max = 1000
min = 0
my_number = 500
count = 0
while 1:
    count += 1
    if my_number==right_number:
        print("you are right")
        break
    elif my_number > right_number:
        # print("try again")
        max = my_number
        my_number = (max-min)/2+min
    else:
        # print("try again")
        min = my_number
        my_number = (max-min)/2+min
print(count)
